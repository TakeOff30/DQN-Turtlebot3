<?xml version="1.0"?>
<launch>
  <!-- Stage 2: Static obstacles - Obstacle avoidance training -->
  <!-- Robot spawning handled by put_robot_in_world.launch (called by TurtleBot3Env) -->

  <!-- Launch Gazebo with static obstacles world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/stage2_static_obstacles.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
</launch>
