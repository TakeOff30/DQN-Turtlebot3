<?xml version="1.0"?>
<launch>
  <!-- Stage 1: Bounded arena - Basic goal navigation with random spawning -->
  <!-- Robot spawning handled by put_robot_in_world.launch (called by TurtleBot3Env) -->

  <!-- Launch Gazebo with bounded arena world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/stage1_bounded_arena.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
</launch>
